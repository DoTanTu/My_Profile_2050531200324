<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343D42"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    >

    <ImageView

        android:id="@+id/image_view"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:padding="5dp" />

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/image_view"
        android:text="Ten chinh "
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_textView"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/image_view"
        android:paddingTop="-1dp"
        android:text="mo ta chi tiet"
        android:textColor="#CD9F836B"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/textView_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:padding="2dp"
        android:src="@drawable/thempr"

        />

    <ImageButton
        android:id="@+id/textView_remove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/textView_add"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:padding="2dp"

        android:src="@drawable/giampr" />

    <TextView
        android:id="@+id/textView_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_add"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@id/textView_remove"
        android:paddingTop="5dp"
        android:text="$"
        android:textColor="#CDFD2032"
        android:textSize="22dp"
        android:textStyle="bold" />
</RelativeLayout>